doctype html
html(lang='es')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')  
      
    
    title Vivero IoT
  body
    nav.navbar.navbar-dark.bg-dark
      a(class='navbar-brand col-sm-3 col-md-2 mr-0' href='#') Vivero IoT
      ul.navbar-nav 
        li.nav-item
          if user
            a(class='nav-link' href='/logout') Logout 
          else
            a(class='nav-link' href='/login') Login  
    div(class='container-fluid')
      block content
      footer.fixed-bottom
        hr
        .text-center  
          a(href='https://github.com/santiagotrini/vivero' target='_blank' class='text-center' style='font-size: 48px; color: black;')
            i(class='fa fa-github')      
        p.text-center.text-muted Vivero IoT &copy 2019 
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
